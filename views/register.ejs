<%- include('partials/head.ejs') %>

<%- include('partials/header.ejs') %>

<main class="container mt-5">
    <h2 class="mb-4">Registrarse</h2>
    <form action="/users/register" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Nombre de usuario:</label>
            <input type="text" class="form-control" id="username" name="username" required value="<%= old.username || '' %>">
            <small class="text-danger"><%= errors.username ? errors.username.msg : '' %></small>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña:</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <small class="text-danger"><%= errors.password ? errors.password.msg : '' %></small>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Correo electrónico:</label>
            <input type="email" class="form-control" id="email" name="email" required value="<%= old.email || '' %>">
            <small class="text-danger"><%= errors.email ? errors.email.msg : '' %></small>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Edad:</label>
            <input type="number" class="form-control" id="age" name="age" value="<%= old.age || '' %>">
            <small class="text-danger"><%= errors.age ? errors.age.msg : '' %></small>
        </div>
        <div class="mb-3">
            <label for="color" class="form-label">Selecciona un color:</label>
            <select class="form-select" id="color" name="color" required>
                <option value="red">Rojo</option>
                <option value="blue">Azul</option>
                <option value="green">Verde</option>
            </select>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="rememberColor" name="rememberColor">
            <label class="form-check-label" for="rememberColor">Recordar color</label>
        </div>
        <button type="submit" class="btn btn-primary">Registrarse</button>
        <button type="button" class="btn btn-secondary" id="forgetColor">Olvidar el color</button>
    </form>
</main>

<script>
    const forgetColorButton = document.getElementById('forgetColor');
    forgetColorButton.addEventListener('click', () => {
        document.cookie = 'selectedColor=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
        window.location.reload();
    });
</script>

